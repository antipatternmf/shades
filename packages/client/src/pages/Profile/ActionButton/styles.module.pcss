.action-button {
  padding: 0;
  border: none;
  background: none;
  color: var(--main-blue-color);
  font-size: 14px;
  line-height: 16px;
  cursor: pointer;

  &:hover {
    color: var(--main-blue-hover-color);
  }

  &:active {
    color: var(--main-blue-active-color);
  }

  &_logout,
  &_logout:hover,
  &_logout:active {
    color: var(--main-red-color);
  }
}
