.not-found {
  display: flex;
  min-height: 100vh;
  min-width: 100vw;
  justify-content: center;
  align-items: center;

  &__container {
    width: 640px;
    height: 640px;
    max-height: 100vh;
    max-width: 100vw;
    display: flex;
    background: var(--background-secondary);
    border-radius: 15px;
    overflow: hidden;
    flex-direction: column;

    h3 {
      font-size: 56px;
      align-self: center;
      justify-self: center;
      margin: auto 20px;
    }
  }
}
