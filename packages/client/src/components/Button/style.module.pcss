.button {
  font-size: 16px;
  display: block;
  width: 100%;
  height: 40px;
  outline: none;
  border: 1px solid var(--layout-black);
  border-radius: 15px;
  color: var(--layout-black);
  cursor: pointer;
  user-select: none;

  &__first {
    background-color: var(--layout-8-color);
  }

  &__second {
    margin-top: 20px;
    background-color: var(--layout-9-color);
  }
}
