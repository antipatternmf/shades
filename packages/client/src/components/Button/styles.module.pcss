.button {
  padding: 14px 38px;
  border: none;
  border-radius: 25px;
  font-family: Roboto, sans-serif;
  font-size: 18px;
  font-weight: 400;
  line-height: 21px;
  cursor: pointer;

  &_primary {
    color: white;
    background: #2382ff;
  }

  &_secondary {
    color: black;
    background: white;
  }
}
