.button {
  &_primary {
    background-color: var(--fawn);

    &:hover {
      background-color: var(--fawn-active);
    }

    &:disabled {
      background-color: var(--fawn-disabled);
    }
  }

  &_secondary {
    background-color: var(--jasmine);

    &:hover {
      background-color: var(--jasmine-active);
    }

    &:disabled {
      background-color: var(--jasmine-disabled);
    }
  }
}
