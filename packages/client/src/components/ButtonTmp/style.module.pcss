.button {
  font-size: 16px;
  display: block;
  width: 250px;
  height: 50px;
  margin: 0 auto;
  outline: none;
  border: none;
  border-radius: 25px;
  background-color: var(--main-blue-color);
  color: #ffffff;
  user-select: none;
  cursor: pointer;

  &:hover {
    background-color: var(--main-blue-hover-color);
  }

  &:active {
    background-color: var(--main-blue-active-color);
  }
}
