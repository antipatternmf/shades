.modal-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgb(0 0 0 / 50%);
}

.modal-content {
  border: 4px solid var(--layout-white);
  border-radius: 30px;
  background-color: var(--layout-1-color);
  box-shadow: 4px 4px 0 var(--layout-white);
}
