.modal-container {
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgb(17 17 17 / 56%);
  border: 1px solid;
}

.modal-content {
  box-shadow: 0 0 5px #3b3a3a;
  background-color: #ffffff;
  border-radius: 16px;
  padding: 20px;
}
