.public-layout {
  display: flex;
  height: 100vh;
  background: #f0f0f0;

  &__go-back {
    &__column {
      display: flex;
      align-items: center;
      padding: 10px;
      background: #ffffff;
    }

    &__button {
      width: 30px;
      height: 30px;
      border-radius: 10px;
      border: none;
      padding: 0;
      margin: 0;
      background: #1169db;
      cursor: pointer;
    }
  }

  &__main {
    flex-grow: 1;
  }
}
