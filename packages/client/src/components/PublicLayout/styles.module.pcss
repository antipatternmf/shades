.public-layout {
  display: flex;
  min-height: 100vh;
  min-width: 100vw;
  justify-content: center;
  align-items: center;

  &__main {
    width: 420px;
    height: 640px;
    max-height: 100vh;
    max-width: 100vw;
    display: flex;
    background: var(--background-secondary);
    border-radius: 15px;
    overflow: hidden;
  }
}
