.formButton {
  font-size: 16px;
  width: 250px;
  height: 50px;
  margin: 0 auto;
  outline: none;
  border: none;
  border-radius: 25px;
  background-color: var(--main-blue-color);
  color: #ffffff;
  user-select: none;
  cursor: pointer;
}

.formButton:hover {
  background-color: var(--main-blue-hover-color);
}

.formButton:active {
  background-color: var(--main-blue-active-color);
}
